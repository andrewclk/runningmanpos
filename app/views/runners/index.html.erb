<p id="notice"><%= notice %></p>

<h1>All the Runners</h1>

<table>
  <thead>
    <tr>
      <th>Runner name</th>
      <th>Area</th>
      <th>Status</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runners.each do |runner| %>
      <tr>
        <td><%=link_to runner.runner_name, runner %></td>
        <td><%= runner.area %></td>
        <td><%= runner.status %></td>
        <td>RM <%= runner.balance %></td>
        <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
        <% if runner.balance == 0 %>
        <td><%= link_to 'Destroy', runner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Runner', new_runner_path, class: "alert button" %>
